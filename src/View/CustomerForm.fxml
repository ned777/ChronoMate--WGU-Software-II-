<GridPane fx:id="formGrid" hgap="10" vgap="10">
    <Label text="Customer ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1" disable="true"/>
    <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Label text="Address:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="addressField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Label text="Postal Code:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="postalField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <Label text="Phone:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="phoneField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <Label text="Country:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <ComboBox fx:id="countryCombo" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    <Label text="State/Province:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <ComboBox fx:id="divisionCombo" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
    <Button text="Save" onAction="#onSaveCustomer" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <Button text="Delete" onAction="#onDeleteCustomer" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
    <Label fx:id="messageLabel" GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
</GridPane>
